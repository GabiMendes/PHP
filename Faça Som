<h3>Exercício lúdico desenvolvido para maior compreensão de funções em PHP</h3>

<?php
interface AnimalInterface {
    public function makeSound();
}

class Dog implements AnimalInterface {
    public function makeSound() {
        echo "Woof! <br />";
    }
}
class Cat implements AnimalInterface {
    public function makeSound() {
        echo "Meow! <br />";
    }
}

class Fish implements AnimalInterface {
    public function makeSound () {
        echo "blub blub <br />";
    }
}
    
class Cow implements AnimalInterface {
    public function makeSound () {
        echo "Muu! <br />";
    }
}
    

$myObj1 = new Dog();
$myObj1->makeSound();

$myObj2 = new Cat();
$myObj2->makeSound();

$myObj3 = new Cow();
$myObj3->makeSound();
 
$myObj4 = new Fish();
$myObj4->makeSound();
?>

</body>
</html>
